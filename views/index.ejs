<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Notes</title>
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <div class="box">
        <div class="newbooksection">
            <h1 class="newheading">Add A New Book</h1>
            
            <div class="bookform">
                <form class="edit-form" action="/add" method="post">
                    <input class="input-field titlename" type="text" placeholder="title" name="newtitle">
                    <textarea class="search btn btn-light" name="newDescription" placeholder="Description" autocomplete="off"></textarea>
                    <input class="input-field liner" type="text" name="newIsbn" placeholder="Book ISBN" autocomplete="off">                
                    <input class="input-field liner" type="text" name="newRating" placeholder="Rating" autocomplete="off">
                    <!-- submit button -->
                    <button class="btn submit-btn liner" type="submit" name="list">Submit</button>
                </form>
            </div>
        </div>
        
            <div class="container">
                <h1 class="newheading">List of Books</h1>
                <ol>
                    <% for(let book of bookItems) { %>
                        <div class="abook">
                            <div class="bookdetails">
                                <!-- leftside book image -->
                                <div class="bookimage">
                                    <img class="cover" src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg">
                                </div>
                                <!-- rightside book details -->
                                <div class="bookinfo">
                                    <h2><%= book.title %></h2>
                                    <p class="bookdescription"><%= book.description %></p>
                                    <p class="rating" name="newRating"> Rating: <%= book.rating %></p>
                
                                <div class="deletedit">
                                    <form class="delete" action="/delete" method="post">
                                    <input name="isbn" type="hidden" value="<%= book.isbn %>">
                                    <!-- delete button show -->
                                    <button class="delete-btn" type="submit" name="delete">Delete</button>
                                </form>

                                <!-- edit a particular book from the book list -->
                                <form action="/edit" method="get" class="edit-form">
                                    <input type="hidden" name="isbn" value="<%= book.isbn %>">
                                    <!-- Edit button -->
                                    <button class="edit-btn" type="submit">Edit</button>
                                </form>
                            </div>
                            </div>
                        </div>  
                        </div>
                        <% } %>
                </ol>
            </div>
            <footer>Copyright by akshat Â© <%= new Date().getFullYear() %>
            </footer>
    </div>
    
    
</body>
</html>